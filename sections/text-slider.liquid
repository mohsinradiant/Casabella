{% style %}
  .infinite-text-slider {
    width: 100%;
    overflow: hidden;
    background: {{ section.settings.bg_color }};
    padding: {{ section.settings.padding_y }}px 0;
  }

  .infinite-text-track {
    display: flex;
    width: max-content;
    animation: scroll-left {{ section.settings.speed }}s linear infinite;
  }

  .infinite-text-group {
    display: flex;
    align-items: center;
  }

  .infinite-text-item {
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    color: {{ section.settings.text_color }};
    white-space: nowrap;
    padding: 0 {{ section.settings.text_spacing }}px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .infinite-text-separator {
    display: flex;
    align-items: center;
  }

  .infinite-text-separator img {
    height: {{ section.settings.separator_height }}px;
    width: auto;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstyle %}

<div class="infinite-text-slider">
  <div class="infinite-text-track">
    {% for i in (1..2) %}
      <div class="infinite-text-group">
        {% for block in section.blocks %}
          <div class="infinite-text-item">
            {{ block.settings.text }}
          </div>

          {% unless forloop.last %}
            <div class="infinite-text-separator">
              <img
                src="{{ section.settings.separator_image }}"
                alt="separator"
                loading="lazy"
              >
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Infinite Text Slider",
  "settings": [
    {
      "type": "image_picker",
      "id": "separator_image",
      "label": "Separator Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#5b0d0d"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 18
    },
    {
      "type": "range",
      "id": "font_weight",
      "label": "Font Weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "default": 600
    },
    {
      "type": "range",
      "id": "text_spacing",
      "label": "Text Horizontal Spacing",
      "min": 8,
      "max": 40,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "separator_height",
      "label": "Separator Height (px)",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Scroll Speed (seconds)",
      "min": 10,
      "max": 80,
      "step": 2,
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_y",
      "label": "Vertical Padding (px)",
      "min": 0,
      "max": 60,
      "step": 4,
      "default": 12
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Timeless"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infinite Text Slider"
    }
  ]
}
{% endschema %}
