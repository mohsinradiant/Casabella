      .infinite-text-slider {
        width: 100%;
        overflow-x: hidden;
        background: #660103;
        padding: 18px 0 9px 0;
        display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
      }

      .infinite-text-track {
        display: flex;
        width: max-content;
        animation: scroll-left {{ section.settings.speed }}s linear infinite;
      }

      .infinite-text-group {
        display: flex;
        align-items: center;
      }

      .infinite-text-item {
        font-weight: 100;
        color: #fff;
        white-space: nowrap;
        padding: 0 40px;
        letter-spacing: 0;
        font-family: 'Ethnic', sans-serif;
        font-size: 14px;
      }

      .infinite-text-separator {
        display: flex;
        align-items: center;
      }

      .infinite-text-separator img {
        height: 10px;
        width: auto;
      }
    .infinite-text-slider-bottom-image{
        width: 100%;
        margin-top: -2px;
    }
      @keyframes scroll-left {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
      }
{% endstyle %}

