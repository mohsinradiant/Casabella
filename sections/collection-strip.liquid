{% assign lazy_load = true %}
<link rel="stylesheet" href="{{ 'collection-strip.css' | asset_url }}">
<div class="collection-strip-container">
  <h2 class="section-heading">{{ section.settings.section_heading }}</h2>
  <p class="section-subheading">{{ section.settings.section_subheading }}</p>
  {% for product in section.settings.collection.products limit: 7 %}
    {% render 'card-product',
      card_product: product,
      media_aspect_ratio: section.settings.image_ratio,
      image_shape: section.settings.image_shape,
      lazy_load: lazy_load,
      show_secondary_image: section.settings.show_secondary_image,
      show_vendor: section.settings.show_vendor,
      show_rating: section.settings.show_rating,
      skip_styles: false,
      section_id: section.id,
      quick_add: section.settings.quick_add
    %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Collection Strip",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading"
    },
    {
      "type": "text",
      "id": "section_subheading",
      "label": "Section Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "CTA"
    },
    {
      "type": "url",
      "label": "CTA Link",
      "id": "cta_link"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Collection Strip"
    }
  ]
}
{% endschema %}
